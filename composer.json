{
	"name": "simple-crud/extra-fields",
	"type": "library",
	"description": "Extra fields for simple-crud package",
	"keywords": ["formats", "mysql", "sqlite"],
	"homepage": "https://github.com/oscarotero/simple-crud-extra-fields",
	"license": "MIT",
	"authors": [
		{
			"name": "Oscar Otero",
			"email": "oom@oscarotero.com",
			"homepage": "http://oscarotero.com",
			"role": "Developer"
		}
	],
	"support": {
		"email": "oom@oscarotero.com",
		"issues": "https://github.com/oscarotero/simple-crud-extra-fields/issues"
	},
	"require": {
		"php": ">=7.2",
		"simple-crud/simple-crud": "^7.2",
		"psr/http-message": "^1.0",
		"cocur/slugify": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"SimpleCrud\\Fields\\": "src"
		}
	},
	"autoload-dev": {
        "psr-4": {
            "SimpleCrud\\Tests\\": "tests/"
        }
    },
	"require-dev": {
		"phpunit/phpunit": "^8.0",
		"friendsofphp/php-cs-fixer": "^2.11",
		"zendframework/zend-diactoros": "^1.3"
	},
	"scripts": {
		"test": "phpunit",
		"cs-fix": "php-cs-fixer fix ."
    }
}
